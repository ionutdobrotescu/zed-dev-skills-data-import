{% extends template('page-layout-main') %}
{% define data = {
    antelopes: _view.antelopes
} %}

{% block content %}
    <h1>Antelopes</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>

            <th>Location</th>
        </tr>
        </thead>
        <tbody>
        {% if data.antelopes is not null %}
            {% for antelope in data.antelopes %}
                <tr>
                    <td>{{ antelope.name }}</td>

                    <td>{{ antelope.antelopeLocation.locationName }}</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}
